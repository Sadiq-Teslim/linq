{
  "manifest_version": 3,
  "name": "LINQ AI - Sales Intelligence",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.lightning.force.com/*",
        "https://*.my.salesforce.com/*",
        "https://*.hubspot.com/*",
        "https://app.hubspot.com/*"
      ],
      "js": ["src/content/index.tsx"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.lightning.force.com/*",
    "https://*.my.salesforce.com/*",
    "https://*.hubspot.com/*",
    "https://app.hubspot.com/*",
    "https://linq-api2.onrender.com/*"
  ],
  "background": {
    "service_worker": "src/app/background.ts",
    "type": "module"
  }
}
